       <div class="form">
            <h2>Escolha um número</h2>
      
        <form>
            <label>Número:</label>
            <input type="text" id="num">
            <button onclick="enviar()">Enviar</button>
        </form>
       </div>
        <script>
            function enviar(){
                let numero= document.getElementById("num").value;
                if(numero>0){
                    alert("Você digitou um valor positivo")
                }
                else if(numero<0){
                    alert("Você digitou um valor negativo")
                }
                else if(numero==0){
                    alert("Você digitou um valor nulo")
                }
             }

        </script>
